<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Label?>
<AnchorPane fx:id="anchorPane" prefHeight="420.0" prefWidth="600.0" styleClass="background"
            stylesheets="/alarm/View/style/firstScreenStyleSheet.css" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="alarm.Controller.FirstScreenController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane prefWidth="350.0"/>
                <AnchorPane prefHeight="500.0" prefWidth="250.0">
                    <children>
                        <Label fx:id="timeLabel" alignment="CENTER" contentDisplay="CENTER"></Label>
                        <Button fx:id="setAlarmButton" alignment="CENTER" contentDisplay="CENTER" layoutX="90.0"
                                layoutY="150.0" onAction="#setAlarmClicked" prefWidth="140.0" styleClass="buttons"
                                text="Set Alarm" textAlignment="CENTER" AnchorPane.rightAnchor="70.0"
                                AnchorPane.topAnchor="150.0"/>
                        <Button fx:id="quitButton" alignment="CENTER" contentDisplay="CENTER" layoutX="90.0"
                                layoutY="273.0" onAction="#quitTheApp" prefWidth="140.0" styleClass="buttons"
                                text="Quit" textAlignment="CENTER" AnchorPane.bottomAnchor="150.0"
                                AnchorPane.rightAnchor="70.0"/>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
