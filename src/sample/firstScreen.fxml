<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="anchorPane" stylesheets="/sample/firstScreenStyleSheet.css" prefHeight="500.0" prefWidth="600.0" styleClass="background" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller.firstScreenController">
    <children>
        <HBox prefHeight="500.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <AnchorPane prefHeight="500.0" prefWidth="400.0" />
                <AnchorPane prefHeight="500.0" prefWidth="200.0">
                    <children>
                        <VBox alignment="CENTER_RIGHT" prefHeight="500.0" prefWidth="200.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Button fx:id="setAlarmButton" alignment="CENTER" contentDisplay="CENTER" onAction="#setAlarmClicked" styleClass="buttons" text="Set Alarm" textAlignment="CENTER">
                                    <VBox.margin>
                                        <Insets right="30.0" />
                                    </VBox.margin>
                                </Button>
                                <Button fx:id="quitButton" alignment="CENTER" contentDisplay="CENTER" onAction="#quitTheApp" styleClass="buttons" text="Quit" textAlignment="CENTER">
                                    <VBox.margin>
                                        <Insets right="30.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
